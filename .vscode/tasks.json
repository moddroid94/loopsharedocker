{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run prod",
            "type": "shell",
            "command": "docker-compose -f docker-compose.prod.yml up -d --build"
        },
        {
            "label": "Remove Build prod",
            "type": "shell",
            "command": "docker-compose -f docker-compose.prod.yml down -v"
        },
        {
            "label": "build and run dev",
            "type": "shell",
            "command": "docker-compose up -d --build"
        },
        {
            "label": "Remove Build dev",
            "type": "shell",
            "command": "docker-compose down -v"
        }
    ]
}